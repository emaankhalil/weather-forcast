{
  "manifest_version": 3,
  "name": "Weather Forecast Extension",
  "version": "1.0",
  "description": "Quick and easy access to weather forecast information with current conditions and 5-day forecast",
  "permissions": [
    "storage",
    "geolocation"
  ],
  "host_permissions": [
    "https://api.weatherapi.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Weather Forecast",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
